<Page
    x:Class="IPOkemonApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IPOkemonApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Definición de filas y columnas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Barra superior -->
            <RowDefinition Height="*"/>
            <!-- Contenido principal -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <!-- Menú lateral -->
            <ColumnDefinition Width="*"/>
            <!-- Contenido -->
        </Grid.ColumnDefinitions>

        <!-- Botón de menú -->
        <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button x:Name="btnMenu" Margin="4,0,256,0" HorizontalAlignment="Stretch" Click="btnMenu_Click">
                <FontIcon Foreground="Black" Glyph="&#xE700;" FontFamily="Segoe MDL2 Assets" />
            </Button>
        </Border>

        <!-- Menú lateral -->
        <SplitView x:Name="sView" IsPaneOpen="True" DisplayMode="CompactInline" CompactPaneLength="30" Grid.ColumnSpan="2" Grid.Row="1" OpenPaneLength="299">
            <SplitView.Pane>
                <Grid>
                    <!-- Definición de filas y columnas del menú -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <!-- Íconos -->
                        <ColumnDefinition/>
                        <!-- Botones -->
                    </Grid.ColumnDefinitions>

                    <!-- Íconos del menú -->
                    <SymbolIcon Grid.Row="0" Margin="4" Symbol="Home"/>
                    <SymbolIcon Grid.Row="1" Margin="4" Symbol="Pictures"/>
                    <SymbolIcon Grid.Row="2" Margin="4" Symbol="Pictures"/>
                    <SymbolIcon Grid.Row="3" Margin="4" Symbol="People"/>
                    <SymbolIcon Grid.Row="4" Margin="4" Symbol="Help"/>

                    <!-- Botones del menú -->
                    <Button x:Name="btnInicio" Content="Inicio" Height="50" FontSize="20" FontWeight="Bold"
                            Background="{x:Null}" BorderBrush="{x:Null}" Click="btnInicio_Click" 
                            Width="269" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center"/>

                    <Button x:Name="btnMisPokemon" Content="Mis Pokémon" Height="50" FontSize="20" FontWeight="Bold"
                            Background="{x:Null}" BorderBrush="{x:Null}" Click="btnMisPokemon_Click" 
                            Width="269" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center"/>

                    <Button x:Name="btnPokedex" Content="Pokédex" Height="50" FontSize="20" FontWeight="Bold"
                            Background="{x:Null}" BorderBrush="{x:Null}" Click="btnPokedex_Click" 
                            Width="269" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center"/>

                    <Button x:Name="btnCombate" Content="Combate" Height="50" FontSize="20" FontWeight="Bold"
                            Background="{x:Null}" BorderBrush="{x:Null}" Click="btnCombate_Click" 
                            Width="269" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center"/>

                    <Button x:Name="btnAcercaDe" Content="Acerca De" Height="50" FontSize="20" FontWeight="Bold"
                            Background="{x:Null}" BorderBrush="{x:Null}" Click="btnAcercaDe_Click" 
                            Width="269" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center"/>
                </Grid>
            </SplitView.Pane>
        </SplitView>

        <!-- Contenido principal -->
        <Frame x:Name="fmMain" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Page>
