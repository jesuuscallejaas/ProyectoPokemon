<Page
    x:Class="IPOkemonApp.InicioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <!-- Fondo con imagen -->
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/fondoinicio.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Contenedor principal -->
        <StackPanel VerticalAlignment="Center">
            <!-- Logo de la aplicación -->
            <Image 
                Source="/Assets/logo_ipokemon.png" 
                Stretch="None"
                HorizontalAlignment="Center"
                Margin="0,0,0,40"/>

            <!-- Panel de bienvenida -->
            <Border
                Background="#CCFFFFFF" 
                BorderBrush="#FF1E3A8A"
                BorderThickness="2"
                CornerRadius="12"
                Padding="25"
                MaxWidth="600"
                HorizontalAlignment="Center">
                <TextBlock
                    x:Name="tbBienvenida"
                    Text=""
                    FontSize="20"
                    LineHeight="30"
                    Foreground="#FF333333"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    FontFamily="Segoe UI Semibold"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>