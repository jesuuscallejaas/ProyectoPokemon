<Page
    x:Class="IPOkemonApp.InfoPokemonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IPOkemonApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="696" 
    Width="1072">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Fondo_MisPokemon.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button 
            x:Name="btnAtras" 
            Click="btnAtras_Click" 
            Grid.Row="0" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="50" 
            Height="50" 
            Background="#FF0E3E50" 
            BorderThickness="0">

            <Image 
                Source="/Assets/flecha-hacia-atras.png" 
                Width="30" 
                Height="30"/>
        </Button>

        <Border 
            Grid.Row="1" 
            Width="400" 
            Height="500" 
            Margin="-20,10,10,10" 
            Padding="10,10,10,10" 
            BorderBrush="DarkGray" 
            BorderThickness="2" 
            CornerRadius="10" 
            Background="White" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">

            <ScrollViewer>
                <StackPanel 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top">

                    <TextBlock 
                        x:Name="tbNombre" 
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="DarkBlue"
                        Text="Nombre"
                        Margin="0,0,0,10"/>

                    <TextBlock 
                        x:Name="tbCategoria" 
                        Margin="0,0,0,10" 
                        FontSize="20"
                        Foreground="DarkGreen"
                        Text="Categoria"/>

                    <TextBlock 
                        x:Name="tbTipo" 
                        Margin="0,0,0,10" 
                        FontSize="20"
                        Foreground="DarkRed"
                        Text="Tipo"/>

                    <TextBlock 
                        x:Name="tbAltura" 
                        Margin="0,0,0,10" 
                        TextWrapping="Wrap"
                        FontSize="20"
                        Foreground="DarkOrange"
                        Text="Altura"/>

                    <TextBlock 
                        x:Name="tbPeso" 
                        Margin="0,0,0,10" 
                        TextWrapping="Wrap"
                        FontSize="20"
                        Foreground="DarkViolet"
                        Text="Peso"/>

                    <TextBlock 
                        x:Name="tbEvolucion" 
                        Margin="0,0,0,10" 
                        TextWrapping="Wrap"
                        FontSize="20"
                        Foreground="DarkCyan"
                        Text="Evolucion"/>

                    <TextBlock 
                        x:Name="tbDesc" 
                        Margin="0,0,0,10" 
                        TextWrapping="Wrap"
                        FontSize="20"
                        Foreground="DarkGoldenrod"
                        Text="Descripcion"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>